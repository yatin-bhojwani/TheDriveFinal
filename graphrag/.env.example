# Google Gemini API Key for processing (embeddings, chunking, entity extraction, etc.)
GEMINI_API_KEY=

# Separate API key and model for final response generation (optional)
# If not set, will use GEMINI_API_KEY and gemini-2.0-flash-exp
RESPONSE_API_KEY=
RESPONSE_MODEL=gemini-2.0-flash-exp

CHROMA_URL=http://localhost:8001
MODEL_NAME=gemini-1.5-pro
EMBED_MODEL=models/embedding-001
COLLECTION=thedrive
MAX_CONTEXT_CHARS=6000
ENABLE_GRAPHRAG=1      # turn graph extraction on
GRAPH_MAX_HOPS=2       # adjust expansion depth if desired
GRAPH_MAX_NODES=120    # adjust number of facts to include
